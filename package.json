{
    "name": "@xesacat/enver",
    "version": "1.0.0",
    "description": "A tool that automatically loads values from env files",
    "author": "XesaCat",
    "license": "Apache-2.0",
    "homepage": "https://github.com/XesaCat/Enver#readme",
    "bugs": {
        "url": "https://github.com/XesaCat/Enver/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/XesaCat/Enver.git"
    },
    "main": "dist/index.js",
    "type": "commonjs",
    "engines": {
        "node": ">=16.13.2"
    },
    "packageManager": "yarn@1.22.17",
    "scripts": {
        "build": "tsc --build",
        "format": "prettier -c . --write",
        "lint": "eslint . --fix",
        "prepack": "prettier . -c --write && eslint . --fix && jest",
        "prepare": "husky install",
        "test": "yarn jest"
    },
    "lint-staged": {
        "*.{js,ts}": [
            "yarn format",
            "yarn lint",
            "yarn test"
        ]
    },
    "dependencies": {
        "dotenv": "^16.0.0"
    },
    "devDependencies": {
        "@types/jest": "^27.4.0",
        "@types/node": "^17.0.18",
        "@typescript-eslint/eslint-plugin": "^5.12.0",
        "@typescript-eslint/parser": "^5.12.0",
        "eslint": "^8.9.0",
        "husky": "^7.0.4",
        "jest": "^27.5.1",
        "lint-staged": "^12.3.4",
        "prettier": "^2.5.1",
        "ts-jest": "^27.1.3",
        "typescript": "^4.5.5"
    }
}
